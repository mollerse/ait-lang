2carthX:
  dup 1> [ 0> ] dip cos * ;

2carthY:
  dup 1> [ 0> ] dip sin * ;

2carth: ( 0 0 ) 2carthX <0 2carthY <1;

2polarR:
  dup 0> dup * [ 1> dup * ] dip sqrt ;

2polarPhi:
  dup 1> [ 0> ] dip atan2 ;

2polar: ( 0 0 ) 2polarR <0 2polarPhi <1 ;

2rad: 180 / PI * ;

2deg: PI / 180 * ;

<+0: [ dup 0> ] dip + <0 ;
<+1: [ dup 1> ] dip + <1 ;

#export 2carth 2polar 2rad 2deg <+0 <+1 ;

{
  "name": "ait-lang",
  "version": "0.1.2",
  "description": "Compiler and runtime for the Ait language",
  "main": "runtimes/node.js",
  "browser": "runtimes/browser.js",
  "scripts": {
    "flow": "flow",
    "test": "ava",
    "test:watch": "ava -w",
    "lint": "eslint lib/**/*.js",
    "build": "BABEL_ENV=commonjs babel -s -d dist lib --ignore=test/*.js",
    "clean": "rimraf dist",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mollerse/ait-lang.git"
  },
  "keywords": [
    "language",
    "web",
    "canvas"
  ],
  "files": [
    "dist",
    "runtimes",
    "util",
    "interfaces.js"
  ],
  "author": "Stian MÃ¸llersen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mollerse/ait-lang/issues"
  },
  "homepage": "https://github.com/mollerse/ait-lang#readme",
  "dependencies": {
    "parsimmon": "^0.7.2"
  },
  "optionalDependencies": {
    "canvas": "^1.3.16"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel": "^6.5.2",
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-register": "^6.16.3",
    "eslint": "^3.7.1",
    "eslint-config-defaults": "^9.0.0",
    "eslint-plugin-import": "^1.16.0",
    "flow-bin": "^0.33.0",
    "rimraf": "^2.5.4"
  },
  "ava": {
    "files": [
      "lib/**/test/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-flow-strip-types"
    ]
  }
}
